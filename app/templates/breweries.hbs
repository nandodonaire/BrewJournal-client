{{#if model}}
  <h2>Breweries: </h2>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Location</th>
      </tr>
    </thead>
  {{#each model as |brewery|}}
    <tbody>
      <tr>
        {{#link-to 'brewery' brewery}}
          <td>{{brewery.name}}</td>
        {{/link-to}}
        <td>{{brewery.location}}</td>
      </tr>
    </tbody>
    {{/each}}
  </table>
  {{else}}
  <h3>It looks like you currently don't have any breweries.</h3>
  <h4>You can add breweries by clicking on Add Brewery below</h4>
{{/if}}

