<div class="content-background">
<h2>Edit Brewery</h2>
<form {{action 'edit' model on='submit'}}>
  <p>Name {{input value=model.name required=true}}</p>
  <p>Location {{input value=model.location}}</p>
  <p>Beers Tasted {{input value=model.beersTasted}}</p>
  <p>Notes {{input value=model.notes}}</p>
  <button class="btn btn-primary">Save</button>
</form>
</div>
